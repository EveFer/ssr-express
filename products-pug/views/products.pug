doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Productos
        link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css",
             integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh", crossorigin="anonymous")

    body 

        section.container
            div.row
                div.col-12
                    h1.text-center.my-3 Registro de Productos
                div.col-12.col-md-6.offset-md-3
                    form.rounded.border.border-dark.p-5.form-product(action="/products" method="post")
                        div.form-group
                            label(for="name") Nombre
                            input.form-control(name="title" type="text" id="title")
                        div.form-group
                            label(for="price") Precio
                            input.form-control(name="price" type="number" min="1" id="price")
                        div.form-group
                            label(for="url") URL
                            input.form-control(name="thumbnail" type="text" id="thumbnail")
                        div.d-flex.justify-content-center
                            button.btn.btn-primary(type="submit" id="btn-save") Guardar producto